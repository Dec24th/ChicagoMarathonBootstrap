<body>
    <div id="top"></div>
    <div id="right"></div>
    <div id="bottom"></div>
    <div id="left"></div>

    <section id="jumbotron" class="text-light p-5 p-lg-0 pt-lg-5 text-align-left text-sm-start">
        <div class="container">
            <div class="row">
                <div class="col-12 order-md-1 d-sm-flexalign-items-center justify-content-between">
                    <h1 class="display-1 text-warning"><i class="bi bi-chevron-right"></i>NYC Marathon | Nov 6th, 2022 <i class="bi bi-chevron-left"></i></h1>
                </div>
            </div>
        </div>
    </section>

    <section id="register">
        <div class="container"> 
                <div class="row align-items-center justify-content-between">
                    <div class="col-6 col-md-6 order-md-1">
                        <h2 class="display-1">Register for the NYC Marathon </h2>
                    </div>
                    <div class="col-6 col-md-6 order-md-2">
                        <h4 class="display-1 arrow "><a href="register"><i class="bi bi-chevron-right"></i></a></h4>
                    </div>
                </div> 
        </div>
    </section>
    <!--Learn Sections-->

    <section id="discover">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-6 col-m-6 order-sm-2">
                    <h2 class="display-1">Discover NYC by running it!</h2>
                </div>
                <div class="col-6 col-md-6 order-md-2">
                    <h4 class="display-1 arrow"><a href="discover"><i class="bi bi-chevron-right"></i></a></h4>
                </div>
            </div>
        </div>
    </section>


    <section id="coaches">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-6 col-md-6">
                    <h2 class="display-1">Get personalized coaching</h2>
                </div>
                <div class="col-6 col-md-6 order-md-2">
                    <h4 class="display-1 arrow"><a href="coaching"><i class="bi bi-chevron-right"></i></a></h4>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact & Map    -->

    <!--FOOTER-->
    <footer class="p-5 text-warning text-center position-relative" id="footer">
        <div class="container">
            <p class="lead text-warning">Copyright &copy : Allan Acosta</p>
            <a href="#" class="position-absolute bottom-0 end-0 p-5">
                <i class="bi bi-arrow-up-circle h1"></i>
            </a>
        </div>
    </footer>


